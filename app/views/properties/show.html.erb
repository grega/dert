<div class="container my-5">
  <div class="row">
    <div class="col-10">
      <h1>Property Details</h1>
    </div>
    <div class="col-2">
      <%= link_to 'Edit property', edit_property_path(@property.id), { :class => 'btn btn-primary' } %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <p><strong>Name:</strong> <%= @property.name %></p>
      <p><strong>URL:</strong> <%= link_to @property.url, @property.url %></p>
      <p><strong>Notes:</strong> <%= @property.notes %></p>
    </div>
  </div>
</div>