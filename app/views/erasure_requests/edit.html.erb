<h1 class="title is-2">Erasure Requests</h1>

<h2 class="title is-3">Edit Request</h2>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= simple_form_for @erasure_request do |f| %>
  <div class="form-group">
    <%= f.input :email %>
  </div>
  <% if @erasure_request.verified %>
    <table>
      <thead>
        <tr>
          <th>Property</th>
          <th>Notes</th>
          <th>Completed</th>
        </tr>
      </thead>
      <tbody>
      <%= f.simple_fields_for :removal_actions do |r| %>
        <tr>
          <td><%= r.object.property.name %></td>
          <td><%= r.input :notes %></td>
          <td><%= r.input :completed, :as => :boolean, :label => false %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Erasure request must be verified before it can be actioned</p>
  <% end %>
  <div class="form-group">
    <%= f.button :submit, { :class => 'btn-primary' } %>
  </div>
<% end %>
 
<%= link_to 'Back', erasure_requests_path %>
