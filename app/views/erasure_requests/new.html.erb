<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h1>New Request</h1>
    </div>
  </div>
</div>
 
<div class="container">
  <div class="row">
    <div class="col-6">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= simple_form_for @erasure_request do |f| %>
      <%= f.input :email %>
      <%= f.association :properties, as: :check_boxes, :input_html => { :checked => true } %>
      <div class="form-group">
        <%= f.button :submit, { :class => 'btn-primary' } %>
      </div>
    <% end %>
  </div>
</div>